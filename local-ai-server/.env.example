# OJT Master - 사내 배포 환경 설정
# 이 파일을 .env로 복사하여 사용하세요

# ============================================
# OJT Master Web App 설정 (필수)
# ============================================

# Supabase 연결 정보 (Supabase 대시보드 > Project Settings > API)
VITE_SUPABASE_URL=https://your-project.supabase.co

# API Key (2025년 11월 이후 신규 프로젝트는 publishable key 사용)
# - 신규: sb_publishable_xxx (권장)
# - 레거시: eyJhbGciOiJIUzI1NiIs... (기존 anon key)
VITE_SUPABASE_PUBLISHABLE_KEY=sb_publishable_xxx

# 앱 포트 (기본: 80)
APP_PORT=80

# AI 서버 호스트 (앱에서 AI 서버 접근용)
# 같은 Docker 네트워크면 'vllm', 외부면 실제 IP
AI_SERVER_HOST=vllm

# Cloudflare R2 이미지 업로드 (선택)
VITE_R2_WORKER_URL=

# ============================================
# AI 서버 설정
# ============================================

# Qwen3 모델 선택 (VRAM 요구량)
# - Qwen/Qwen3-0.6B  : ~1GB  (저사양)
# - Qwen/Qwen3-1.7B  : ~2GB  (가벼움)
# - Qwen/Qwen3-4B    : ~4GB  (권장)
# - Qwen/Qwen3-8B    : ~8GB  (고성능)
MODEL_NAME=Qwen/Qwen3-4B

# 최대 컨텍스트 길이
MAX_MODEL_LEN=8192

# GPU 메모리 사용률 (0.0 ~ 1.0)
GPU_MEMORY_UTIL=0.9

# AI API 포트 (기본: 8000)
PORT=8000

# Ollama 포트 (옵션 사용 시)
OLLAMA_PORT=11434

# HuggingFace 토큰 (Gated 모델 사용 시)
HF_TOKEN=

# ============================================
# 배포 URL 예시
# ============================================
# 앱:       http://<서버IP>:80
# AI API:   http://<서버IP>:8000
